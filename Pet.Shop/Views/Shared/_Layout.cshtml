<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/images/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/xregexp/xregexp-all.js"></script>
    <link rel="stylesheet" href="~/styles/common.css" />
    <script src="~/scripts/common.js" defer></script>
</head>
<body>
    <header class="header">
        <img src="~/images/header.png" alt="Header Image" />
    </header>

    <nav class="navbar navbar-expand-sm">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link fs-4" asp-controller="home" asp-action="index">Home</a>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link fs-4" asp-controller="admin" asp-action="index">Admin Catalog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-4" asp-controller="account" asp-action="manage">Manage Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-4" asp-controller="account" asp-action="logout">Logout</a>
                </li>
            }
            else if (User.IsInRole("User"))
            {
                <li class="nav-item">
                    <a class="nav-link fs-4" asp-controller="catalog" asp-action="index">Catalog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-4" asp-controller="account" asp-action="manage">Manage Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-4" asp-controller="account" asp-action="logout">Logout</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link fs-4" asp-controller="catalog" asp-action="index">Catalog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-4" asp-controller="account" asp-action="register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-4" asp-controller="account" asp-action="login">Login</a>
                </li>
            }
            
        </ul>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
    <br />
</body>
</html>
